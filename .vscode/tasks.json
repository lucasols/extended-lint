{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "test:ui",
      "problemMatcher": [],
      "label": "Start test UI"
    },
    {
      "label": "bump version and deploy",
      "type": "shell",
      "command": "pnpm pre-publish && pnpm version ${input:version} && pnpm npm-publish",
      "problemMatcher": []
    },
    {
      "label": "Build no-test",
      "type": "npm",
      "script": "build:no-test",
      "problemMatcher": []
    },
    {
      "label": "Run in test project",
      "type": "npm",
      "script": "run-in-test-project",
      "problemMatcher": [],
      "presentation": {
        "clear": true
      }
    },
    {
      "label": "Run in test project (fix)",
      "type": "shell",
      "command": "pnpm run run-in-test-project -- --fix",
      "problemMatcher": [],
      "presentation": {
        "clear": true
      }
    },
    {
      "label": "Run lint",
      "type": "shell",
      "command": "pnpm run lint",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "version",
      "type": "pickString",
      "description": "Select version type",
      "options": ["minor", "patch", "major"]
    }
  ]
}
